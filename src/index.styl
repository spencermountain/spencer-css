@import "colors.styl"
@import "sizes.styl"
@import "flex.styl"
@import "input.styl"
@import "misc.styl"

body
  min-height: 100%;
  margin: 1rem;
  padding: 0;
  background-color:greys.offwhite
  font-family: 'avenir next', avenir, sans-serif;
  display:flex;
  flex-direction: column;
  align-items: center;

img
  max-width:100%

hr
  color:lightgrey;
  width:70%;

.stage
  max-width:45rem
  width:80%
  min-width:18rem
  min-height:12rem;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align:left;
  flex-wrap: wrap;
  @media screen and (max-width: 30rem)
    margin-left: 5px
    margin-right: 5px
    width:100%
