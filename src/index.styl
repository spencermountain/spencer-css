@import "colors.styl"
@import "hovers.styl"
@import "input.styl"
@import "text.styl"
@import "flex.styl"

.link
  color: $blue
  text-decoration: none
  cursor:pointer

.rounded
  border-radius:.5rem
.round
  border-radius:50%

.outline
  border: 1px solid $lightgrey
  border-radius:.5rem
.underline
  border-bottom: 2px solid $green

.shadow
   box-shadow: 2px 2px 8px 0px rgba( 0, 0, 0, 0.2 );
.img
  max-width:100%
