html
  position: relative;
  height: 100%;
  width: 100%;
  padding: 0px;
  margin: 0px auto;
  margin-top: 1.2rem;
  min-height: 100vh;
  overflow-x: hidden;
  color:#4d4d4d
  background-color:#fbfbfb;
  font-size: 16px;
  line-height:150%;

body {
  font-size: 1.2rem;
  background-color: #fbfbfb;
}

.main
  margin: 0 auto;
  padding-left: 1.2rem;
  padding-right: 1.2rem;
  max-width: 1080px;
  display:flex;
  flex-direction: column !important;
  justify-content: space-around;
  align-items: flex-start;
  text-align:left;
  flex-wrap: wrap;
  flex:1;
  color: #333333;

  @media (min-width: 640px) {
    main {
      max-width: none;
    }
  }
  
space
  margin-top:4rem;
  margin-bottom:4rem;
.space
  margin-top:4rem;
  margin-bottom:4rem;
.spacer
  margin-top:4rem;
  margin-bottom:4rem;

.left
  align-self: flex-start;
.right
  align-self: flex-end;
.center
  align-self: center;


.rounded
  border-radius:5px

.outline
  border: 1px solid #c4c4c4
  border-radius:5px

a
  color: #6699cc
  text-decoration: none
  cursor:pointer
  &:hover
    border-bottom:2px solid #6699cc

img
  margin:1.2rem;
  max-width:100%
  border-radius:3px
  box-shadow: 2px 2px 8px 0px rgba( 0, 0, 0, 0.2 );
  align-self: center;
