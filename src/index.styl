@import "colors.styl"
@import "sizes.styl"
@import "flex.styl"
@import "input.styl"
@import "misc.styl"
@import "position.styl"
@import "text.styl"

html
  min-height: 100%;
  font-size: 16px;
body
  margin: 0px;
  padding: 0px;
  background-color:greys.offwhite
  color:#4d4d4d
  font-family: 'avenir next', avenir, sans-serif;
  display:flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;

img
  max-width:100%

hr
  color:lightgrey;
  width:70%;

a
  color: #6699cc
  cursor:pointer
  text-decoration: underline
  &:hover
    text-decoration-color:#cc7066

.center
  text-align:center;
.left
  text-align:left;
.right
  text-align:right;

.footer
  margin: auto 1rem 1rem auto;
  padding:0.5rem;
  justify-content: flex-end;
  align-content: flex-end;
  align-items: flex-end;

.stage
  display:flex;
  flex-direction: column !important;
  justify-content: space-around;
  align-items: center;
  text-align:left;
  flex-wrap: wrap;
  margin:1.5rem;
  padding:1.5rem;
  // max-width:38.44125rem; //w10
  max-width:57.661875;  //w11
  min-width:17.085rem
  @media screen and (max-width: 25.6275rem)
    margin:0px;
