// aspect-ratios
rect = 0.5625 //16/9
golden= 1.618033989;

//widths, margins are fifth
for name, size in fifth
  .w{name}
    width: size rem
  .h{name}
    height: size rem
  .m{name}
    margin: size rem
  .ml{name}
    margin-left: size rem
  .mt{name}
    margin-top: size rem
  .mb{name}
    margin-bottom: size rem
  .p{name}
    padding: size rem
  .rect{name}
    width: size rem;
    // height: size/golden rem;
    height: size*rect rem;
    text-align:center;
  .portrait{name}
    width: size rem;
    height: size*golden rem;
    text-align:center;

//fonts are minor third
for name, size in fifth
  .f{name}
    font-size: size rem
