//perfect fifth scale, from https://type-scale.com/
tiny={
  '07' : 0.296
  '08' : 0.444
  '09' : 0.667
}
medium={
  '1' : 1
  '2' : 1.5
  '3' : 2.25
  '4' : 3.375
  '5' : 5.063
  '6' : 7.594
  '7' : 11.39
  '8' : 17.085
}
large ={
  '9' : 25.6275
  '10' : 38.44125
  '11' : 57.661875
  '12' : 86.4928125
  // '13' : 129.73921875
  // '14' : 194.608828125
}

for name, size in tiny
  .w{name}
    width: size rem
  .h{name}
    height: size rem    
  .f{name}
    font-size: size rem

//widths, margins are fifth
for name, size in medium
  .w{name}
    width: size rem
  .minw{name}
    min-width: size rem
  .maxw{name}
    max-width: size rem
  .h{name}
    height: size rem
  .m{name}
    margin: size rem
  .ml{name}
    margin-left: size rem
  .mt{name}
    margin-top: size rem
  .mb{name}
    margin-bottom: size rem
  .mv{name}
    margin-top: size rem
    margin-bottom: size rem
  .mh{name}
    margin-left: size rem
    margin-right: size rem
  .p{name}
    padding: size rem
  // fonts
  .f{name}
    font-size: size rem

for name, size in large
  .f{name}
    font-size: size rem
  .w{name}
    width: size rem
