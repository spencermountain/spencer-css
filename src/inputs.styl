  textarea 
    min-width: 30rem;
    min-height: 10rem;
    font-size: 1.2rem;
    line-height: 1.6rem;
    padding: 1rem 1.5rem 1rem 1.5rem;
    border-radius: 5px;
    color:#727273;
    font-family: inherit;  
    outline: none
    border: none;
    border-bottom:4px solid lightsteelblue;
    box-shadow: 1px 1px 4px 0px rgba( 0, 0, 0, 0.2 )
    transition: box-shadow 300ms
    transition: border-bottom 300ms
    &:hover
      box-shadow: 0px 0px 2px 0px rgba( 0, 0, 0, 0.5 );
    &:focus
      box-shadow: 2px 2px 8px 0px rgba( 0, 0, 0, 0.5 )
      color:$darkblue
      border-bottom:4px solid steelblue;

  .input
    min-width: 20rem;
    min-height: 2rem;
    font-size: 1.2rem;
    padding: 0.5rem 1.5rem 0.5rem 1.5rem;
    margin: 1rem;
    border-radius: 5px;
    color:#727273;
    outline: none
    border: none;
    border-bottom:4px solid lightsteelblue;
    box-shadow: 1px 1px 4px 0px rgba( 0, 0, 0, 0.2 )
    transition: box-shadow 300ms
    transition: border-bottom 300ms
    &:hover
      box-shadow: 0px 0px 2px 0px rgba( 0, 0, 0, 0.5 );
    &:focus
      box-shadow: 2px 2px 8px 0px rgba( 0, 0, 0, 0.5 )
      color:$darkblue
      border-bottom:4px solid steelblue;