.onecol
    text-align: center
    max-width:60rem;
    min-width:40rem;
    min-height:3rem;

.full
  flex:1
  width:100%;

.medium
  width:100%;
  min-width:12rem;
  height:80%;
  min-height:5rem;
  padding: 0.5rem;
  margin: 0.1rem;
  border-radius:.5rem
.small
  @extend .medium
  width:50%;
  min-width:6rem;
  min-height:3rem;
.tiny
  @extend .medium
  width:50%;
  min-width:3rem;
  min-height:1.5rem;

