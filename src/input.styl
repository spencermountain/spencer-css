.input
  display: block;
  margin: 1rem;
  padding: .5em .6em;
  color: $grey;
  width: 80%;
  max-width:50rem;
  font-size: 1.6rem;
  letter-spacing: .05em
  line-height: 1.2rem;
  outline: none
  border: none;
  border-radius: 0.4rem;
  box-shadow: 0px 0px 2px 0px rgba( 0, 0, 0, 0.2 );
  transition: box-shadow 300ms
  &:focus
    box-shadow: 2px 2px 8px 0px rgba( 0, 0, 0, 0.3 )
    color:$navy
